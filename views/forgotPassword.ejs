<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 450px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #65422e;
            font-weight: bold;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: green;
            border: none;
        }

        .btn-primary:hover {
            background-color: rgb(5, 78, 5);
        }

        .btn-danger {
            background-color: #c0392b;
            border: none;
        }

        .btn-danger:hover {
            background-color: #a52820;
        }

        .alert {
            font-size: 14px;
        }

        hr {
            margin-top: 20px;
            border-top: 2px solid #65422e;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Forgot Password</h2>

    <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger">
            <% errors.forEach(function(error) { %>
                <p><%= error %></p>
            <% }); %>
        </div>
    <% } %>

    <% if (messages && messages.length > 0) { %>
        <div class="alert alert-success">
            <% messages.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>

    <!-- Verify Contact Number -->
    <form action="/forgot-password" method="POST">
        <div class="mb-3">
            <label for="email" class="form-label">Enter Your Email:</label>
            <input type="email" name="email" id="email" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="contactNumber" class="form-label">Enter Your Contact Number:</label>
            <input type="text" name="contactNumber" id="contactNumber" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Verify</button>
    </form>

    <a href="/login">
        <button class="btn btn-danger w-100 mt-2">Back</button>
    </a>

    <!-- Reset Password (Shown only after verification) -->
    <% if (verified) { %>
        <hr>
        <h3 class="text-center">Reset Password</h3>
        <form action="/reset-password" method="POST">
            <input type="hidden" name="email" value="<%= email %>">
            <div class="mb-3">
                <label for="newPassword" class="form-label">New Password:</label>
                <input type="password" name="newPassword" id="newPassword" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm New Password:</label>
                <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-success w-100">Reset Password</button>
        </form>
    <% } %>
</div>

</body>
</html>
